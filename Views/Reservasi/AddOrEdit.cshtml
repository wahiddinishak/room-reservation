@model LPS.Models.tblT_Reservasi

@{
    ViewData["Title"] = "Reservation Form";
}

<h4>Resevation Form</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservasi_PK" />
            <div class="form-group">
                <label asp-for="Ruangan_FK" class="control-label"></label>

                @if (Model.Reservasi_PK == 0)
                {
                    <select asp-for="Ruangan_FK" asp-items="@(new SelectList(ViewBag.ruang,"Ruangan_PK","NamaRuangan"))" class="form-control">
                        <option value="" hidden disabled selected style="height: auto;">Pilih Ruangan</option>
                    </select>
                }
                else
                {
                    <select asp-for="Ruangan_FK" asp-items="@(new SelectList(ViewBag.ruang,"Ruangan_PK","NamaRuangan"))" class="form-control" readonly>
                    </select>
                }

                <span asp-validation-for="Ruangan_FK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectReservasi" class="control-label"></label>
                <input asp-for="SubjectReservasi" class="form-control" />
                <span asp-validation-for="SubjectReservasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TanggalReservasi" class="control-label"></label>
                <input asp-for="TanggalReservasi" class="form-control" id="datepicker" />
                <span asp-validation-for="TanggalReservasi" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="JamMulai" class="control-label"></label>
                    <input asp-for="JamMulai" class="form-control" id="timepicker" />
                    <span asp-validation-for="JamMulai" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="JamSelesai" class="control-label"></label>
                    <input asp-for="JamSelesai" class="form-control" id="timepicker1" />
                    <span asp-validation-for="JamSelesai" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-warning btn-block">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            $("#datepicker").datetimepicker({
                format: 'YYYY-MM-DD'
            });
        })

        $(document).ready(function () {
            $("#timepicker").datetimepicker({
                format: 'HH:mm'
            });
        })

        $(document).ready(function () {
            $("#timepicker1").datetimepicker({
                format: 'HH:mm'
            });
        })
    </script>
}
